<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/showStyle.css">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <div class="question">
            <a href="/users">Back</a>
            <h1><%= question.title%></h1>
            <h2 class="questionContent"><%= question.question%></h2>
            <p><%= question.difficult%></p>
            <code class="questionContent"><%= question.code%></code>
            <a href="/questions/<%= question._id %>/edit">Edit</a>
        </div>
        
        <% question.answer.forEach(function(a) { %>
            <div class="answer">
                <h3>Answer</h3>
                <p class="questionContent"><%= a.content %></p>
                <code class="questionContent"><%= a.code %></code>
                <a href="/questions/<%= question._id %>/answerEdit/<%= a._id%>">Edit</a>
            </div> 
        <% }) %>
        <form class="form" method="POST"  action="/questions/<%= question._id %>/answer">
            <div class="answers">
                <h2>Your answer</h2>
                <h4>Answer</h4>
                <textarea class="text" name="content">
                </textarea>
            </div>
            <div class="answers">
                <h4>Solution Code</h4>
                <textarea class="text" name="code">
                </textarea>
                <input class="answerBottun" type="submit" value="asnwer">
            </div>
        </form>
  </div>
</body>
</html>